<% content_for :head do %>
<style type="text/css">
body { background-color: #eee;}
</style>
<%end%>
<div class="content-container">
<div class="section">
<div class="section-header">
<p><%= @patients.length %> Patients(s)</p>
<button class="btn info float-right">
<%= link_to "Export Patients", :controller => "patients", :action => "export_patients_with_condition", :q => @condition %>
</button>
</div>
<table id="sortable" class="zebra-striped">
<thead>
	<tr>
		<th>Patient ID</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Gender</th>
		<th>DOB</th>
	</tr>
	</thead>
<% @patients.each do |patient| %>
	<tr>
		<td><%= link_to patient.medical_record_number, :controller => "patients", :action=>"show", :id=>patient.id %></td>
		<td><%= patient.first %></td>
		<td><%= patient.last %></td>
		<td><%= patient.gender %></td>
		<td><%= Time.at(patient.birthdate).strftime("%d.%b.%Y") %></td>
	</tr>
<% end %>
</table>
</div>
</div>
