<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div id="login">
    <div id="cap-top"></div>
    <div id="cap-body">
      <div id="branding">
        <%= image_tag "pophealth_welcome.png", :id => 'imgLogo', :alt => 'popHealth logo' %>
      </div>
      <div class="panel">
        <div class="accountError">
          <%= devise_error_messages! %>
          <%= alert %>
        </div>
        <ul class="register">
          <li>
            <label for="first_name"><%= t('register.first_name')%>:</label>
            <%= f.text_field :first_name %>
          </li>
          <li>
            <label for="last_name"><%= t('register.last_name') %>:</label>
            <%= f.text_field :last_name %>
          </li>
          <li>
            <label for="username">popHealth <%= t('register.username') %>:</label>
            <%= f.text_field :username %>
            <p>Must be at least 5 characters long.</p>
          </li>
          <li>
            <label for="email"><%= t('register.your_email_address') %>:</label>
            <%= f.text_field :email %>
          </li>
          <li>
            <label for="password">popHealth <%= t('register.password') %>:</label>
            <%= f.password_field :password %>
            <p>Must be at least 5 characters long.</p>
          </li>
          <li>
            <label for="password_confirmation">Confirm Password:</label>
            <%= password_field_tag :password_confirmation %>
          </li>
          <li>
            <label for="company"><%= t('register.your_organization') %>:</label>
            <%= f.text_field :company %>
          </li>
          <li>
            <label for="company_url"><%= t('register.your_organization_url') %>:</label>
            <%= f.text_field :company_url %>
          </li>
          <li>
            <label for="registry_name"><%= t('register.registry_name') %>:</label>
            <%= f.text_field :registry_name %>
          </li>
          <li>
            <label for="registry_id"><%= t('register.registry_id') %>::</label>
            <%= f.text_field :registry_id %>
          </li>
          <li>
            <label for="npi"><%= t('register.provider_id') %>:</label>
            <%= f.text_field :npi %>
          </li>
          <li>
            <label for="tin"><%= t('register.tax_id') %>:</label>
            <%= f.text_field :tin %>
          </li>
        </ul>
        <% @bundles.each do |bundle| %>
        <%= raw bundle["license"] %>
        <% end %>
        <div id="regcheckbox">
          <%= f.check_box :agree_license %>
          <label for="agree_license">I agree to the above Terms and Conditions of use</label>
        </div>
        <div class="actions">
            <a class="whitebutton" href="/"><span><%= t('register.cancel') %></span></a>
            <a class="bluebutton" href="#" onclick="submitRegisterform();"><span><%= t('register.create') %></span></a>
        </div>
      </div><!-- end div.panel -->
      </div><!-- end #cap-body -->
    <div id="cap-bottom"></div>
  </div><!-- END #login -->
<% end %>
